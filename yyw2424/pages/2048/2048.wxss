/* pages/index/2048.wxss */
page{
   background-image: url("http://2048game.com/img/pattern/amam.png"); 
   /* background-color: #faf8ef; */
   background-position: 0 0;
   background-repeat: repeat-y;
}

.score {
    display: flex;
}

.title{
    flex:1;
    /* width: 100rpx; */
    height: 120rpx;
    line-height: 120rpx;
    /* background:deepskyblue; */
    margin: 40rpx 100rpx 40rpx 40rpx;
    text-align: center;
    font-size: 2.8rem;
    font-weight: bold;
    color: #776E65;
    border-radius: 8rpx;
}

.scoredetail{
    flex:1;
    width: 100rpx; 
    height: 100rpx;
    line-height: 80rpx;
    /* background:#eee4da; */
    background-color: #bbada0;
    margin: 40rpx 8rpx;
    padding: 15rpx 0rpx;
    text-align: center;
    border-radius: 8rpx;
    color: white;
}

.scoredetail:last-child{
     margin-right: 40rpx; 
}

.scoredesc{
    font-size: 0.8rem;
    line-height: 50rpx;
}
.scorenumber{
    line-height: 60rpx;
}

.score-addition{
  position: absolute;
    right: 140px;
    top:90rpx; 
    font-size: 25px;
    line-height: 25px;
    font-weight: bold;
    color: rgba(119, 110, 101, 0.9);
    z-index: 100;
}

.restart{
    flex:1;
    height: 80rpx;
    line-height: 80rpx;
    background:#8f7a66;
    margin: 20rpx 40rpx;
    text-align: center;
    font-size: 0.8rem;
    color: white;
    border-radius: 8rpx;
    word-break: break-all; 
}

.subtitle{
  width: 480rpx;
}

